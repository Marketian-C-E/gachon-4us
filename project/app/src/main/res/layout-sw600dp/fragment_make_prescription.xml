<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f3f8f7">

    <TextView
        android:id="@+id/prescription_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="71dp"
        android:text="{} 고객님에 대한\n처방을 선택해 주세요."
        android:textSize="43sp"
        android:letterSpacing="-0.01"
        android:textColor="#1C1C1C"
        android:fontFamily="@font/font_family"
        android:textFontWeight="700"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="44dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/prescription_ai_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/GREEN_1"
            android:layout_marginRight="20dp"
            android:gravity="center" >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_prescription_ai"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프리미엄\n프로그램 처방"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="42sp"
                android:textColor="#ffffff"
                android:letterSpacing="-0.01"
                android:gravity="center"
                android:padding="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prescription_basic_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/GREEN_1"
            android:gravity="center" >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_prescription_sefl"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="베이직\n프로그램 처방"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="42sp"
                android:textColor="#ffffff"
                android:letterSpacing="-0.01"
                android:gravity="center"
                android:padding="40dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="44dp">

        <LinearLayout
            android:id="@+id/prescription_self_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/GREEN_1"
            android:gravity="center" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수동 운동\n프로그램 처방"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="42sp"
                android:textColor="#ffffff"
                android:letterSpacing="-0.01"
                android:gravity="center"
                android:padding="40dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>