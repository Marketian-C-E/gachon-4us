<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="46dp"
    android:paddingVertical="36dp"
    android:layout_marginBottom="28dp"
    android:gravity="center"
    android:background="@drawable/radius"
    android:backgroundTint="@color/white"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/client_name_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="#000000"
                android:letterSpacing="-0.01"
                android:text="안주영"
                android:layout_marginBottom="21dp"
            />
            <TextView
                android:id="@+id/client_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textStyle="normal"
                android:textSize="24sp"
                android:textColor="#686868"
                android:letterSpacing="-0.01"
                android:text=""
                />
        </LinearLayout>

        <!-- 생년월일 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textStyle="normal"
                android:textSize="24sp"
                android:textColor="#97a3a3"
                android:letterSpacing="-0.01"
                android:text="생년월일"/>

            <TextView
                android:id="@+id/client_birth_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:textStyle="normal"
                android:textSize="24sp"
                android:textColor="#97a3a3"
                android:letterSpacing="-0.01"
                android:text="1957.01.20"/>
        </LinearLayout>

        <!-- 최근 검사 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textStyle="normal"
                android:textSize="24sp"
                android:textColor="#97a3a3"
                android:letterSpacing="-0.01"
                android:text="최근 검사"/>

            <TextView
                android:id="@+id/recent_measure_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:textStyle="normal"
                android:textSize="24sp"
                android:textColor="#97a3a3"
                android:letterSpacing="-0.01"
                android:text="없음"/>
        </LinearLayout>

        <!-- 검사 날짜 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textStyle="normal"
                android:textSize="24sp"
                android:textColor="#97a3a3"
                android:letterSpacing="-0.01"
                android:text="검사 날짜"/>

            <TextView
                android:id="@+id/recent_measure_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#97a3a3"
                android:letterSpacing="-0.01"
                android:text=""/>
        </LinearLayout>

        <TextView
            android:id="@+id/clientPhoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/measurement_btn"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/GREEN_1"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:textStyle="bold"
            android:textSize="30sp"
            android:letterSpacing="-0.01"
            android:layout_marginBottom="12dp"
            android:text="측정"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exercise_btn"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:background="@drawable/radius_00b0a6"
            android:textColor="@color/GREEN_1"
            android:fontFamily="@font/pretendard_bold"
            android:textStyle="bold"
            android:textSize="30sp"
            android:letterSpacing="-0.01"
            android:layout_marginBottom="12dp"
            android:text="운동하기"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/result_btn"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:background="@drawable/radius_00b0a6"
            android:textColor="@color/GREEN_1"
            android:fontFamily="@font/pretendard_bold"
            android:textStyle="bold"
            android:textSize="30sp"
            android:letterSpacing="-0.01"
            android:text="결과 조회"/>

    </LinearLayout>
</LinearLayout>
