<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".views.fragments.CmprhResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/logo_vector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_family"
                    android:letterSpacing="-0.01"
                    android:text="신체기능검사결과"
                    android:textColor="#2C2C2C"
                    android:textSize="33sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                >
                <Button
                    android:id="@+id/btn_move_result3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/GREEN_1"
                    android:textColor="@color/white"
                    android:text="변화 그래프" />
                <Button
                    android:id="@+id/btn_capture_screen"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/GREEN_1"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    android:text="화면 캡처" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="-"
                    android:textSize="20sp"
                    android:textColor="@color/gray_600"
                    android:textAlignment="viewEnd"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eff7f7"
                android:paddingVertical="20dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="26dp"
                    android:layout_marginHorizontal="22dp">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="이름: " />

                    <TextView
                        android:id="@+id/tv_birth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="생년월일: " />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="성별: " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="26dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginHorizontal="22dp">
                    <TextView
                        android:id="@+id/tv_height"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="신장(cm): " />

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="체중(kg): " />


                </LinearLayout>

            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#eff7f7"
                android:padding="40dp">

                <LinearLayout
                    android:id="@+id/singlelegLayout"
                    android:layout_width="219dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/seatedupLayout"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_family"
                        android:letterSpacing="-0.01"
                        android:text="외발서기 검사결과"
                        android:textAlignment="center"
                        android:textColor="#252525"
                        android:textFontWeight="700"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/singlegstance_count_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:letterSpacing="-0.05"
                                    android:text="-"
                                    android:textColor="#00b0a6"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <!--                            <TextV  -->

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="223dp"
                                android:layout_gravity="center_vertical"
                                android:background="#c8c8c8"></View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/grade_view"
                                    android:layout_width="80dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/radius"
                                    android:backgroundTint="@color/light_blue_400"
                                    android:gravity="center"
                                    android:lineSpacingExtra="-11sp"
                                    android:text="Failed"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                            </LinearLayout>
                        </LinearLayout>
                        .
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/walkLayout"
                    android:layout_width="228dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_family"
                        android:letterSpacing="-0.01"
                        android:text="걷기 검사결과"
                        android:textAlignment="center"
                        android:textColor="#252525"
                        android:textFontWeight="700"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/walk_count_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:letterSpacing="-0.05"
                                    android:text="-"
                                    android:textColor="#00b0a6"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <!--                        <TextView-->
                                <!--                            android:id="@+id/walk_timer_view"-->
                                <!--                            android:layout_width="wrap_content"-->
                                <!--                            android:layout_height="wrap_content"-->
                                <!--                            android:layout_gravity="center"-->
                                <!--                            android:textStyle="normal"-->
                                <!--                            android:textSize="20sp"-->
                                <!--                            android:textColor="#666666"-->
                                <!--                            android:text="(30초)" />-->

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="223dp"
                                android:layout_gravity="center_vertical"
                                android:background="#c8c8c8"></View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/walk_imageView"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/asset_graph2"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent" />

                                    <TextView
                                        android:id="@+id/walk_grade_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="@+id/walk_imageView"
                                        app:layout_constraintStart_toStartOf="@+id/walk_imageView"
                                        app:layout_constraintTop_toTopOf="@+id/walk_imageView"
                                        app:layout_constraintVertical_bias="0.597" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="등급"
                                    android:textColor="#666666"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </LinearLayout>
                        .
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/seatedupLayout"
                    android:layout_width="220dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/walkLayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_family"
                        android:letterSpacing="-0.01"
                        android:text="앉았다 일어서기 검사결과"
                        android:textAlignment="center"
                        android:textColor="#252525"
                        android:textFontWeight="700"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/seatup_count_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:letterSpacing="-0.05"
                                    android:text="-"
                                    android:textColor="#00b0a6"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <!--                            <TextView-->
                                <!--                                android:id="@+id/seatup_timer_view"-->
                                <!--                                android:layout_width="wrap_content"-->
                                <!--                                android:layout_height="wrap_content"-->
                                <!--                                android:layout_gravity="center"-->
                                <!--                                android:textStyle="normal"-->
                                <!--                                android:textSize="30sp"-->
                                <!--                                android:textColor="#666666"-->
                                <!--                                android:text="(30초)" />-->

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="223dp"
                                android:layout_gravity="center_vertical"
                                android:background="#c8c8c8"></View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/seatup_grade_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="@+id/seatupimageView"
                                        app:layout_constraintStart_toStartOf="@+id/seatupimageView"
                                        app:layout_constraintTop_toTopOf="@+id/seatupimageView"
                                        app:layout_constraintVertical_bias="0.597" />

                                    <ImageView
                                        android:id="@+id/seatupimageView"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/asset_graph2"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="등급"
                                    android:textColor="#666666"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </LinearLayout>
                        .
                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:id="@+id/back_body_image"
                    android:layout_width="183dp"
                    android:layout_height="372dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/img_back_body"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/body_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/body_image"
                    android:layout_width="183dp"
                    android:layout_height="372dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/body"
                    app:layout_constraintStart_toEndOf="@+id/seatedupLayout"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="192dp"
                    android:text="후 면"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/back_body_image"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.85" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="352dp"
                    android:text="전 면"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/body_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.868" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="40dp" />

                <ImageView
                    android:layout_width="725dp"
                    android:layout_height="266dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/img_result_tooltip"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/singlelegLayout" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>