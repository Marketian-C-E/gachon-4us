<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f3f8f7"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >
            <TextView
                android:id="@+id/exercise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#000000"
                android:letterSpacing="-0.01"
                android:text=""/>
            <TextView
                android:id="@+id/exercise_feedback_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/pretendard_bold"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#707070"
                android:letterSpacing="-0.01"
                android:text=""/>
            </LinearLayout>
            <!-- 운동 결과 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radius"
                android:backgroundTint="@color/white"
                android:padding="30dp"
                android:orientation="vertical">
                <!-- 숙련도 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:textStyle="normal"
                        android:textSize="22sp"
                        android:textColor="#252525"
                        android:letterSpacing="-0.01"
                        android:layout_marginBottom="20dp"
                        android:text="운동 숙련도"/>
                    <co.kr.myfitnote.core.ui.GradeView
                        android:id="@+id/level_grade_view"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="29dp"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textStyle="normal"
                        android:textSize="22sp"
                        android:textColor="#252525"
                        android:letterSpacing="-0.01"
                        android:text="운동 정확도"/>
                    <co.kr.myfitnote.core.ui.GradeView
                        android:id="@+id/accuracy_grade_view"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="22dp"
                android:background="#c4dad5">
            </View>
            <!-- 운동 피드백 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#252525"
                    android:letterSpacing="-0.01"
                    android:text="오늘의 운동을 어떠셨나요?"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                >
                <LinearLayout
                    android:id="@+id/easy_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#69e25f"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_face"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="-10sp"
                        android:gravity="center_horizontal"
                        android:text="쉬웠어요"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/good_btn"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#4ed5ff"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_face_3"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="-10sp"
                        android:gravity="center_horizontal"
                        android:text="좋았어요"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hard_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#ffd25e"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_face_2"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="-10sp"
                        android:gravity="center_horizontal"
                        android:text="힘들었어요" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="18dp"
        android:paddingHorizontal="25dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/home_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="메뉴로 이동"
            android:textColor="#fff"
            android:backgroundTint="@color/GREEN_1"
            android:textStyle="bold"
            android:textSize="22sp"
            android:background="@drawable/radius"/>
    </LinearLayout>
</LinearLayout>